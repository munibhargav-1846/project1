#include <stdio.h>
#include <string.h>

struct Venue {
    char name[50];
    char location[50];
    int capacity;
};

void addVenue() {
    struct Venue v;
    FILE *fp = fopen("venues.txt", "a");

    printf("\nEnter Venue Name: ");
    scanf(" %[^\n]", v.name);

    printf("Enter Location: ");
    scanf(" %[^\n]", v.location);

    printf("Enter Capacity: ");
    scanf("%d", &v.capacity);

    fprintf(fp, "%s|%s|%d\n", v.name, v.location, v.capacity);
    fclose(fp);

    printf("\n✔ Venue added successfully!\n");
}

void viewVenues() {
    struct Venue v;
    FILE *fp = fopen("venues.txt", "r");

    if (fp == NULL) {
        printf("\nNo venues found!\n");
        return;
    }

    printf("\n--- Venue List ---\n");

    while (fscanf(fp, "%[^|]|%[^|]|%d\n", v.name, v.location, &v.capacity) != EOF) {
        printf("Name: %s\nLocation: %s\nCapacity: %d\n\n", v.name, v.location, v.capacity);
    }

    fclose(fp);
}

void searchVenue() {
    struct Venue v;
    char key[50];
    int found = 0;

    printf("\nEnter venue name to search: ");
    scanf(" %[^\n]", key);

    FILE *fp = fopen("venues.txt", "r");
    if (fp == NULL) {
        printf("\nNo venues found!\n");
        return;
    }

    while (fscanf(fp, "%[^|]|%[^|]|%d\n", v.name, v.location, &v.capacity) != EOF) {
        if (strcasecmp(v.name, key) == 0) {
            printf("\n✔ Venue Found!\n");
            printf("Name: %s\nLocation: %s\nCapacity: %d\n", v.name, v.location, v.capacity);
            found = 1;
            break;
        }
    }

    if (!found)
        printf("\n✖ Venue not found!\n");

    fclose(fp);
}

void deleteVenue() {
    struct Venue v;
    char key[50];
    int found = 0;

    printf("\nEnter venue name to delete: ");
    scanf(" %[^\n]", key);

    FILE *fp = fopen("venues.txt", "r");
    FILE *temp = fopen("temp.txt", "w");

    if (fp == NULL) {
        printf("\nNo venues found!\n");
        return;
    }

    while (fscanf(fp, "%[^|]|%[^|]|%d\n", v.name, v.location, &v.capacity) != EOF) {
        if (strcasecmp(v.name, key) != 0) {
            fprintf(temp, "%s|%s|%d\n", v.name, v.location, v.capacity);
        } else {
            found = 1;
        }
    }

    fclose(fp);
    fclose(temp);

    remove("venues.txt");
    rename("temp.txt", "venues.txt");

    if (found)
        printf("\n✔ Venue deleted successfully!\n");
    else
        printf("\n✖ Venue not found!\n");
}

int main() {
    int choice;

    while (1) {
        printf("\n=== Venue Management System ===\n");
        printf("1. Add Venue\n");
        printf("2. View Venues\n");
        printf("3. Search Venue\n");
        printf("4. Delete Venue\n");
        printf("5. Exit\n");

        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: addVenue(); break;
            case 2: viewVenues(); break;
            case 3: searchVenue(); break;
            case 4: deleteVenue(); break;
            case 5: return 0;
            default: printf("\nInvalid choice!\n");
        }
    }
}
